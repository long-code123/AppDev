@model AppDev.Models.RequestCategory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>RequestCategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreOwner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreOwner.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsApproved)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.IsApproved)
            {
                case null:
                    @Html.Raw("Pending");
                    break;
                case true:
                    @Html.Raw("Yes");
                    break;
                case false:
                    @Html.Raw("No");
                    break;
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Approve" asp-route-id="@Model?.Id">Approve</a> |
    <a asp-action="Index">Back to List</a>
</div>
